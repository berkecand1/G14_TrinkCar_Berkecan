<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="193dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="133dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="192dp"
                    android:layout_height="80dp"
                    android:contentDescription="@string/app_name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/modelName"
                    android:layout_width="192dp"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/brandName"
                    android:layout_alignRight="@+id/brandName"
                    android:layout_alignBottom="@+id/brandName"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-74dp"
                    android:layout_marginRight="-74dp"
                    android:layout_marginBottom="8dp"
                    android:text="Model" />

                <TextView
                    android:id="@+id/brandName"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="28dp"
                    android:layout_toRightOf="@+id/img"
                    android:text="brand"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/price"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/img"
                    android:layout_alignRight="@+id/img"
                    android:layout_alignBottom="@+id/img"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-78dp"
                    android:layout_marginRight="-78dp"
                    android:layout_marginBottom="14dp"
                    android:text="Price" />

                <TextView
                    android:id="@+id/kilometer"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_alignEnd="@+id/price"
                    android:layout_alignRight="@+id/price"
                    android:layout_alignBottom="@+id/price"
                    android:layout_gravity="center"
                    android:layout_marginEnd="-73dp"
                    android:layout_marginRight="-73dp"
                    android:layout_marginBottom="-1dp"
                    android:text="Kilometer" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>